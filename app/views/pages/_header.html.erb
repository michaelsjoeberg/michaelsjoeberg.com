<div class="container-fluid p-md-5 p-sm-3" style="background:rgba(23, 23, 23, 0.05);">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-5 text-lg-right hidden-until-lg">
            <h3><%= image_tag "profile_sm.jpg", :class => "m-0", :style => "border-radius:50%;max-height:80px;" %></h3>
        </div>
        <div class="col-12 col-md-10 col-lg-5 text-center text-lg-left mt-3 mt-lg-2">
            <a href="/" class="no-decoration">
                <!-- <h1 class="rotate font-family-mono mt-md-1">
                    <span class="pl-1 pr-1">michaelsjöberg</span>
                </h1> -->
                <h1 class="typewriter font-family-mono mt-md-1">
                    <span class="typewriter-text">michaelsjöberg</span>
                </h1>
            </a>
            <% if @location.nil? %>
                <p class="mb-0"><i class="fas fa-map-marker-alt"></i> No location</p>
            <% else %>
                <p class="mb-0"><a href="https://www.google.com/maps?q=<%= @location %>" target="_blank"><i class="fas fa-map-marker-alt"></i> <%= @location %></a></p>
            <% end %>
        </div>

        <!-- intro -->
        <div class="col-12 col-md-8 text-center mt-3 mt-md-5">
            <p class="m-0">I am currently building a collaborative investment management platform to make it easier to invest better together at <a href="https://eqzen.com">EQZEN</a>.</p>
        </div>

        <!-- most recent tweet -->
        <div class="col-12 col-md-10 mt-3 mt-md-5 hidden-until-lg">
            <div class="row">
                <% @tweets[0..1].each do |tweet| %>
                    <div class="col-12 col-md-6">
                        <div class="<% if tweet.equal?(@tweets[0..1].last) %>mb-0<% else %>mb-3<% end %>">
                            <p class="m-0"><a href="<%= tweet.url %>" target="_blank"><%= tweet.text %></a></p>
                            <p class="small text-muted mb-0"><%= tweet.created_at %></p>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>