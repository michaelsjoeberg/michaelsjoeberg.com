<%= render 'navigation' %> 

<div class="container-fluid p-md-5 p-sm-3">

    <!-- header -->
    <div class="row justify-content-center mb-3">
        <div class="col-12 col-md-5">
            <h1><%= @meta_title %></h1>
        </div>
        <div class="col-12 col-md-5 text-md-right">
            <input id="search" class="pl-3" name="search" placeholder="Search" type="text" data-list=".list" autocomplete="off" style="margin-top:9px;min-width:100%;">
        </div>
        <div class="col-12 col-md-10 mt-3">
            <div class="divider"></div>
        </div>
    </div>

    <div class="row justify-content-center">

        <!-- recent commits -->
        <div class="col-12 col-md-10 hidden-until-lg">
            <div class="row list">
                <% @commits[0..20].each do |commit| %>
                    <div class="col-12">
                        <div class="<% if commit.equal?(@commits[0..20].last) %>mb-0<% else %>mb-3<% end %>">
                            <p class="m-0">
                                <a href="https://github.com/<%= commit['repo']['name'] %>/commit/<%= commit['payload']['commits'][0]['sha'] %>" target="_blank"><%= commit['payload']['commits'][0]['message'] %></a>
                            </p>
                            <p class="small text-muted mb-0">GitHub -- <%= commit['created_at'].to_datetime.strftime("%Y-%m-%d %H:%M:%S UTC") %></p>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>

    </div>
</div>

<%= render 'footer' %> 
